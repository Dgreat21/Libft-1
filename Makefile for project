# **************************************************************************** #
# GENERIC VARIABLES

NAME		=	libft.a

SRC			=	ft_atoi.c\
				ft_isalpha.c\
				ft_itoa.c\
				ft_memcmp.c\
				ft_putchar_fd.c\
				ft_split.c\
				ft_strlcat.c\
				ft_strncmp.c\
				ft_substr.c\
				ft_bzero.c\
				ft_isascii.c \
				ft_memcpy.c\
				ft_putendl_fd.c\
				ft_strchr.c\
				ft_strlcpy.c\
				ft_strnstr.c\
				ft_tolower.c\
				ft_calloc.c\
				ft_isdigit.c\
				ft_memccpy.c\
				ft_memmove.c\
				ft_putnbr_fd.c\
				ft_strdup.c\
				ft_strlen.c\
				ft_strrchr.c\
				ft_toupper.c\
				ft_isalnum.c\
				ft_isprint.c\
				ft_memchr.c\
				ft_memset.c\
				ft_putstr_fd.c\
				ft_strjoin.c\
				ft_strmapi.c\
				ft_strtrim.c 

SRC_BONUS	=	ft_lstdelone.c\
				ft_lstnew.c\
				ft_lstadd_back.c\
				ft_lstiter.c\
				ft_lstclear.c\
				ft_lstmap.c\
				ft_lstsize.c\
				ft_lstadd_front.c\
				ft_lstlast.c\

OBJ			=	$(SRC:.c=.o)

OBJ_BONUS	=	$(SRC_BONUS:.c=.o)

DEP			=	$(OBJ:%.o=%.d)

DEP_BONUS	=	$(OBJ_BONUS:%.o=%.d)

# **************************************************************************** #
# COMPILER VARIABLES

CC 			=	clang
FLAGS		=	-Wall -Wextra -Werror

# **************************************************************************** #
# GENERIC RULES

all: $(NAME)

$(NAME): $(OBJ)
	@ar rc $(NAME) $(OBJ)
	@ranlib $(NAME)
	@echo "libft.a was created"

%.o: %.c
	@$(CC) $(CC_FLAGS) -o $@ -c $< -MMD

clean:
	@rm -Rf $(OBJ) $(OBJ_BONUS) $(DEP) $(DEP_BONUS)
	@echo "Objects was deleted"

fclean: clean
	@rm -f $(NAME)
	@echo "libft.a was deleted"

re: fclean all

bonus: $(OBJ) $(OBJ_BONUS)
	@ar rc $(NAME) $(OBJ_BONUS) $(OBJ)
	@ranlib $(NAME)
	@echo "Bonus part was added"

.PHONY: all clean fclean re bonus